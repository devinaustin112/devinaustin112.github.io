		<script src="jquery-3.4.1.min.js">
		</script>

		<script>
			$(function() {
				$("#main_drop").click(function() {
					var drop = $("#main_drop");
					var val = drop.css("border-bottom-right-radius");
					var content = $("#main_drop").children(".dropdown-content");


					if(val === "20px") {
						drop.css("border-radius", "20px 20px 0px 0px");
						content.slideToggle(200);	
					} else {
						content.slideToggle(200, function() {	
							drop.css("border-radius", "20px 20px 20px 20px");
						});
					}
				});
				$("#home_drop").click(function() {
					var drop = $("#home_drop");
					var val = drop.css("border-bottom-right-radius");
					var content = $("#home_drop").children(".dropdown-content");


					if(val === "20px") {
						drop.css("border-radius", "0px 0px 0px 0px");
						content.slideToggle(200);	
					} else {
						content.slideToggle(200, function() {	
							drop.css("border-radius", "0px 0px 20px 20px");
						});
					}
				});
			});

		</script>
	</head>
